@page "{id:int?}"
@model SuperMercadoNetoOnLine.Pages.ClienteCRUD.AlterarModel
@{
    ViewData["title"] = "Alteração de Cliente";
}

<main class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-sm-12">
            <h1>@ViewData["title"]</h1>
            <hr />
            <form method="post" class="mt-3 mb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Cliente.IdCliente" /> @*Campo oculto com id do cliente*@
                <fieldset>
                    <legend>Dados Pessoais</legend>
                    <div class="form-group">
                        <label asp-for="Cliente.Nome" class="control-label"></label>
                        <input asp-for="Cliente.Nome" class="form-control col-6" />
                        <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cliente.CPF" class="control-label"></label>
                        <span>(somante números)</span>
                        <span class="font-weight-bold d-block">@Html.DisplayFor(modelItem => modelItem.Cliente.CPF)</span>
                        <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cliente.DataNascimento" class="control-label"></label>
                        <input asp-for="Cliente.DataNascimento" class="form-control col-3" />
                        <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Contatos</legend>
                    <div class="form-group">
                        <label asp-for="Cliente.Email" class="control-label"></label>
                        <input asp-for="Cliente.Email" class="form-control col-4" />
                        <span class="font-dark d-block">@Html.DisplayFor(modelItem => modelItem.Cliente.Email)</span>
                        <span asp-validation-for="Cliente.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cliente.Telefone" class="control-label"></label>
                        <span>(com DDD, somente números)</span>
                        <input asp-for="Cliente.Telefone" class="form-control col-2" placeholder="99999999999" />
                        <span asp-validation-for="Cliente.Telefone" class="text-danger"></span>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Endereço</legend>
                    <div class="form-group">
                        <label asp-for="Cliente.Endereco.CEP" class="control-label"></label>
                        <span>(somente números)</span>
                        <div class="input-group">
                            <input asp-for="Cliente.Endereco.CEP" class="form-control col-2" />
                            <div class="input-group-append">
                                <span class="input-group-text p-1">
                                    <i class="fi-xnsrsl-loading d-none" id="cep_loading"></i>
                                    <i class="fi-xnsrsl-check d-none" id="cep_checked"></i>
                                    <i class="fi-xnsrsl-times-wide" id="cep_none"></i>
                                </span>
                            </div>
                        </div>
                        <span class="text-muted d-block" id="endereco">Digite um CEP válido e aguarde.</span>
                        <span asp-validation-for="Cliente.Endereco.CEP" class="text-danger"></span>
                        <input type="hidden" asp-for="Cliente.Endereco.Logradouro" value="" />
                        <span asp-validation-for="Cliente.Endereco.Logradouro" class="text-danger"></span>
                        <input type="hidden" asp-for="Cliente.Endereco.Bairro" value="" />
                        <input type="hidden" asp-for="Cliente.Endereco.Cidade" value="" />
                        <input type="hidden" asp-for="Cliente.Endereco.Estado" value="" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cliente.Endereco.Numero" class="control-label"></label>
                        <input asp-for="Cliente.Endereco.Numero" class="form-control col-2" />
                        <span asp-validation-for="Cliente.Endereco.Numero" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cliente.Endereco.Complemento" class="control-label"></label>
                        <input asp-for="Cliente.Endereco.Complemento" class="form-control col-4" />
                        <span asp-validation-for="Cliente.Endereco.Complemento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cliente.Endereco.Referencia" class="control-label"></label>
                        <input asp-for="Cliente.Endereco.Referencia" class="form-control col-4" />
                        <span asp-validation-for="Cliente.Endereco.Referencia" class="text-danger"></span>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</main>

@*scripts de validação local -  js no client validação previa *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CustomConfirm");}
    @{await Html.RenderPartialAsync("_ConsultaCEP");}

}