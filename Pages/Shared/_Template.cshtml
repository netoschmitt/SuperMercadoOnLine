<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <meta charset="utf-8" lang="pt-br" />
        <title>Sacolão online :: Area Administrativa</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <header class="bg-dark">
            <div class="container">
                <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
                    <a class="navbar-brand" href="#">Sacolão Online</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-item nav-link" asp-area="" asp-page="/Admin">Área Administrativa</a>
                            <a class="nav-item nav-link" asp-area="" asp-page="/ProdutoCRUD/Index">Produtos</a>
                            <a class="nav-item nav-link" asp-area="" asp-page="/ClientesCRUD/Listar">Clientes</a>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <section class="container">
            <main role="main">
                @RenderBody()
            </main>
        </section>
        <footer class="footer bg-light text-center p-4 fixed-bottom">
            <div class="container">
                <span class="text-dark">Copyright &copy; 2022 - Todos os direitos reservados</span>
            </div>
        </footer>
    </body>
</html>