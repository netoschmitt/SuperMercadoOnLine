<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" lang="pt-br" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title> SuperMercado Online :: Área Administrativa</title>

</head>
<body>
    <header class="bg-dark">
        <div class="container">
            <nav class="navbar navbar-dark  bg-dark navbar-expand-lg">
                <a class="navbar-brand" asp-area="" asp-page="/Index">SuperMercado Online</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="#navbarNavAltMarkup"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="#navbarNavAltMarkup">
                    <div class="navbar-nav ">
                        <a class="nav-item nav-link" asp-area="" asp-page="/Admin">Area Administrativa</a>
                        <a class="nav-item nav-link" asp-area="" asp-page="/ProdutoCRUD">Produtos</a>
                        <a class="nav-item nav-link" asp-area="" asp-page="/ClienteCRUD">Clientes</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <section class="container">
        <main role="main" >
            @RenderBody()
        </main>
    </section>

    <footer class="footer bg-light  text-center p-4 fixed-bottom">
        <div class="container">
            <span class="text-dark"> Copyright &copy; 2022 - Todos os direitos reservados</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="https://friconix.com/cdn/friconix.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
