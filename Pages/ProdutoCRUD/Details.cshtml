@page
@model SuperMercadoNetoOnLine.Pages.ProdutoCRUD.DetailsModel

@{
    ViewData["Title"] = "Detalhes de Produto";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4><b>Código</b> @Model.Produto.IdProduto.ToString("D5")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produto.Estoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produto.Estoque)
        </dd>
    </dl>
</div>
<div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Produto.IdProduto" class="btn btn-primary">Alterar</a>
        <a asp-page="./Index" class="btn btn-secondary ">Voltar à Lista</a>
    </div>
</div>
